@using WebCoreTask.Models
@model SimpleIntrestModel

<h1>Welcome To Simple Interest</h1>

<form asp-action="Index" method="post">
    <div class="row mt-3">
        <h2>Enter Value</h2>

    </div>
    <div class="row mb-3 mt-3">

        <div class="col-sm-2">Principal Amount</div>
        <div class="col-sm-1">
        <input type="number" step="0.01" asp-for="PrincipalAmount"/></div>
    </div>
    <div class="row mb-3">

        <div class="col-sm-2">Rate Of Interest</div>
        <div class="col-sm-1">
            <input type="number" step="0.01" asp-for="RateOfInterest" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-2">Years Of Investment</div>
        <div class="col-sm-1">
            <input type="number" step="0.01" asp-for="YearOfInvestment" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            <button type="submit" >Calculate</button>
        </div>
        
    </div>
</form>
<hr />
<div class="row mt-3">
    <h2>Last Calculated Value</h2>

</div>
<div class="row mb-3">

    <div class="col-sm-2" >Principal Amount</div>
    <div class="col-sm-1">
    <strong>@Model.PrincipalAmount</strong></div>
</div>
<div class="row mb-3">

    <div class="col-sm-2">Rate Of Interest</div>
    <div class="col-sm-1">
        <strong>@Model.RateOfInterest </strong>
    </div>
</div>
<div class="row mb-3">

    <div class="col-sm-2">Years Of Investment</div>
    <div class="col-sm-1">
        <strong>@Model.YearOfInvestment </strong></div>
</div>
<div class="row">

    <div class="col-sm-2">Simple Interest</div>
    <div class="col-sm-1">
    <strong>@Model.SimpleInterest</strong></div>
</div>
